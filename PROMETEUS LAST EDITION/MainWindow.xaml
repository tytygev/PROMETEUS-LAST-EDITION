        <SolidColorBrush x:Key="OptionMark.Disabled.Border" Color="{DynamicResource ColorNuans}"/>
        <SolidColorBrush x:Key="OptionMark.Disabled.Glyph" Color="{DynamicResource ColorAltNuans}"/>
